@model Edrive.Models._LockPrice
@section Head
{
<title>
	Price Guarantee
</title><meta name="metatitle" /><meta name="description" /><meta name="keywords" />
    <link href="@Url.Content("~/Content/contentstyle.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
}
<div class="product-inner-page">
    <div class="divdetail-inner">
        <div class="clear">
        </div>
    </div>
    <div class="tab-new">
        <div class="teb-left">
        </div>
        <div class="tab-line">
            <div class="tab-tital">
                Price Lock</div>
        </div>
        <div class="tab-right">
        </div>
        <div class="clear">
        </div>
    </div>
    <div class="clear1">
    </div>
    <div class="divbottom-home">
        <div class="divbottomleft-new-top">
        </div>
        <div class="divbottommiddetail-new-line-top-inner">
        </div>
        <div class="divbottomright-new-top">
        </div>
        <div class="clear">
        </div>
    </div>
    <div class="divinnercontent-home-new-one">
        <div class="divinnercontent">
            <div style="margin-left: 90%">
                <img src="@Url.Content("~/Content/Themes/App_Themes/EDrive/images/icon.jpg")" style="position: relative; height: 46px;
                        right: 50px; top: 0px; z-index: 1000;" />
            </div>
            <div class="thankyouBody">
                @using (Html.BeginForm("PriceLock", "Product", FormMethod.Post, new { target = "_blank" }))
                {<table width="100%">
                      <tr>
                          <td width="20%">
                              VIN #
                          </td>
                          <td>
                              :
                          </td>
                          <td colspan="2">
                              @Model.vin
                          </td>
                      </tr>
                      <tr>
                          <td>
                              Make
                          </td>
                          <td>
                              :
                          </td>
                          <td colspan="2">
                             @Model.MakeName
                          </td>
                      </tr>
                      <tr>
                          <td>
                              Model
                          </td>
                          <td>
                              :
                          </td>
                          <td colspan="2">
                            @Model.ModelName
                          </td>
                      </tr>
                      <tr>
                          <td>
                              Pre-Auction Price
                          </td>
                          <td>
                              :
                          </td>
                          <td colspan="2">
                              @string.Format("${0:n0}", Model.price_Current)
                          </td>
                      </tr>
                      <tr>
                          <td>
                              Dealer
                          </td>
                          <td>
                              :
                          </td>
                          <td colspan="2">
                          @Model.DealerName
                          </td>
                      </tr>
                      <tr>
                          <td>
                              Location
                          </td>
                          <td>
                              :
                          </td>
                          <td colspan="2">
                              @Common_Methods.GetZip(Model.zip)
                               @Html.HiddenFor(m => m.ProductID)
                                  
                          </td>
                      </tr>
                      <tr>
                          <td colspan="3">
                              Please Type your name below. Price Guarantee not valid without this information.
                          </td>
                      </tr>
                      <tr>
                          <td>
                              Full Name
                          </td>
                          <td>
                              :
                          </td>
                          <td>
                                @Html.TextBoxFor(m => m.Name, new { style = "width:200px", @class = "textBox" })
                          </td>
                      </tr>
                      <tr>
                          <td>
                              E-Mail Address
                          </td> 
                          <td>
                              :
                          </td>
                          <td>
                          @Html.TextBoxFor(m => m.Email, new { style = "width:200px", @class = "textBox" })
                              <br />
                              
                          </td>
                      </tr>
                      <tr>
                          <td>
                              Phone
                          </td>
                          <td>
                              :
                          </td>
                          <td>
                            @Html.TextBox("Phone", "", new { style = "width:200px", @class = "textBox" })
                          </td>
                      </tr>
                      <tr>
                          <td colspan="3">
                              <input type="image" target="_blank" id="imgSubmit"   src="@Url.Content("~/Content/Themes/App_Themes/EDrive/images/submit.png")" />
                          </td>
                      </tr>
                  </table>}
            </div>
        </div>
    </div>
    <div class="clear">
    </div>
    <div class="divbottom-home">
        <div class="divbottomleft-new">
        </div>
        <div class="divbottommiddetail-new-line-inner">
        </div>
        <div class="divbottomright-new">
        </div>
    </div>
    <div class="clear">
    </div>
</div>
