                                                            <td>
                                                                :
                                                            </td>
                                                            <td style="font-size: 13px;">
                                                                @ViewData["lblMSRP"]
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td style="font-size: 13px;">
                                                                Avg. Retail
                                                            </td>
                                                            <td>
                                                                :
                                                            </td>
                                                            <td style="font-size: 13px;">
                                                                @ViewData["lblAvgRetail"]
