                                <tr>
                                    <td valign="top">
                                        <input type="radio"  value="false"   name="Offer" checked="checked" 
                                         />
                                        @Html.Hidden("VIN", ViewData["vin"])
                                        @Html.Hidden("zip", ViewData["zip"])
                                        @Html.Hidden("Mileage", ViewData["Mileage"])
                                        @Html.Hidden("Condition", ViewData["Condition"])
                                           

                                    </td>
                                    <td style="font-weight: bold;">
                                        Accept <span style="color: #32A1FC">Average Trade Value</span>
                                        <br />
                                        for my vehicle <span style="color: Red; font-size: 9px;">(Fastest Results)</span>
                                    </td>
