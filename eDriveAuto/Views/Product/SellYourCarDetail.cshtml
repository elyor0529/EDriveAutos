                                                                        <table>
                                                                            <td>
                                                                                <img src="/Content/Themes/App_Themes/EDrive/images/arrow_right_blue.png" />
                                                                            </td>
                                                                            <td>
                                                                                @item.DisplayName
                                                                            </td>
                                                                        </table>
                                                                    </div>
                                                    
                                                }}
                                                }
                                                               
                                                            </td>
                                                        </tr>
