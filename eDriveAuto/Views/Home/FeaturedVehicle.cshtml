		<li><a href="#">
				<img src="@Url.Content("~/Content/Images/caraousal_img.jpg")" alt="" /></a></li>
		<li><a href="#">
				<img src="@Url.Content("~/Content/Images/caraousal_img.jpg")" alt="" /></a></li>
		<li><a href="#">
				<img src="@Url.Content("~/Content/Images/caraousal_img.jpg")" alt="" /></a></li>
		<li><a href="#">
				<img src="@Url.Content("~/Content/Images/caraousal_img.jpg")" alt="" /></a></li>
		<li><a href="#">
				<img src="@Url.Content("~/Content/Images/caraousal_img.jpg")" alt="" /></a></li>
	}


}
