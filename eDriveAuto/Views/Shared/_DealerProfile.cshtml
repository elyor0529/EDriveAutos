@model Edrive.Models.DealerInfo
   <table style="width: 100%">
                <tr>
                    <td class="firstCol">
                        logo:
                    </td>
                    <td>
                        <input type="file" name="LogoFup" /> <span class="profileLink">@Html.ActionLink("View Profile Page", "DealerProfile", "Home", new { area = "", id = @Model.CustomerID }, new { id = "profileLink" })</span>

                        <input type="hidden"  name="Logo" value="@Model.Logo" />
                        <br />
                        @{
                            if (String.IsNullOrEmpty(Model.Logo) == false)
                            {
                            // add delete buton
                                <img src="@Model.Logo"   width="100" height="82" />
                            <br />
                            <input style="width: 177px;" type="button" id="deleteLogo" class="cancel" value="Remove image"   />
                            <br />
                            }
                            else
                            {        
                            <img src="@Url.Content("~/Content/themes/App_Themes/EDrive/images/photo-comming-soon.jpg")"   width="100" height="82" />
                            
                            
                            }
                                
                        }
                        
                    </td>
                </tr>
                <tr>
                    <td class="firstCol">
                        Credit Application URL:
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.ApplicationURL)
                        <span class="msgUrl" style="">Valid url should begin with "http or https" e.g. http://www.google.co.in/</span>

                    </td>
                </tr>
                <tr>
                    <td class="firstCol">
                        Get Warranty URL:
                    </td>
                    <td>@Html.TextBoxFor(m => m.WarrantyURL) <span class="msgUrl" style="">Valid url should begin with "http or https" e.g. http://www.google.co.in/</span>

                    </td>
                </tr>
                <tr>
                    <td class="firstCol">
                        Service/Parts URL:
                    </td>
                    <td>@Html.TextBoxFor(m => m.ServiceURL) <span class="msgUrl" style="">Valid url should begin with "http or https" e.g. http://www.google.co.in/</span>

                    </td>
                </tr>
                <tr>
                    <td class="firstCol">
                        Description
                    </td>
                    <td>@Html.TextAreaFor(m => m.Description, new { @id = "content" })
                        <script type="text/javascript">

			//<![CDATA[

                            CKEDITOR.replace('Description',
					{
					    fullPage: true, skin: 'office2003'

					});



			//]]>

                        </script>
                    </td>
                </tr>
                <tr>
                    <td class="firstCol">
                        Page Image:
                    </td>
                    <td>
                        <input type="file" name="PageImageFup" />
                        <br />
                        @if (String.IsNullOrEmpty(Model.PageImage) == false)
                        {<img src="@Model.PageImage" width="100" height="82" />
                            // add delete buton
                            <br />
                            <input style="width: 177px;" type="button" id="DeletePageImage" value="Remove image" />
                            <br />
                        }
                        else
                        { 
                            <img src="@Url.Content("~/Content/themes/App_Themes/EDrive/images/photo-comming-soon.jpg")"   width="100" height="82" />
                            
                        }
                        <input type="hidden"  name="PageImage" value="@Model.PageImage" />
                    </td>
                </tr>
            </table>