@RenderSection("Head", false)

 
<style type="text/css">
    .pageNumber{cursor: pointer;background: white;color: blue;padding-right: 3px;padding-left: 3px;}
.pageNumberActive{cursor: pointer;background: white;color: blue;padding-right: 3px;padding-left: 3px;border: black 1px solid;
}
  ul {
 
  font-size: 12px;
  font-weight:bold;
  margin: 0;
  padding: 0;
  list-style: none;
}
ul li {
  display: block;
  position: relative;
  float: left;
}
li ul { display: none; }
ul li a {
  display: block;
  text-decoration: none;
  color: #ffffff;
  border-top: 0px solid #ffffff;
  padding: 5px 15px 5px 15px;
  background: #0896ef;
  margin-left: 1px;
  white-space: nowrap;
}
ul li a:hover { background: #0896ef; color:White;}
li:hover ul {
  display: block;
  position: absolute;
}
li:hover li {
  float: none;
  font-size: 11px;
}
li:hover a { background: #0896ef; }
li a:visited { background: #0896ef; color:#ffffff}

li:hover li a:hover { background: #0896ef; }
 a#AdminLogo{font-size:38px;color:White;}
</style>
 
