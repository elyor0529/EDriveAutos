@model Edrive.Models.UserLogin
@section Head
{
    <link href="@Url.Content("~/Content/contentstyle.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
@{ //users auth cookies has expired show message
    if (Session["UserID"] != null)
    {
    <div class="SessionLogOUt">
        <div class="SessionText">
            Your Session has ended. Please re-login to continue.
        </div>
    </div>
    }
}
<div class="product-inner-page">
    <div class="divdetail-inner">
        <div class="clear">
        </div>
    </div>
    <div class="tab-new">
        <div class="teb-left">
        </div>
        <div class="tab-line">
            <div class="tab-tital">
                Login</div>
        </div>
        <div class="tab-right">
        </div>
        <div class="clear">
        </div>
    </div>
    <div class="clear1">
    </div>
    <div class="divbottom-home">
        <div class="divbottomleft-new-top">
        </div>
        <div class="divbottommiddetail-new-line-top-inner">
        </div>
        <div class="divbottomright-new-top">
        </div>
        <div class="clear">
        </div>
    </div>
    <div class="divinnercontent-home-new-one">
        <div class="divinnercontent">
            <div class="diviconwar">
            </div>
            <div class="overviewdetaillogowar">
                <div class="htmlcontent">
                    <div class="htmlcontent-body">
                        <div id="LoginBox">
                            <h2>
                                Full Access Login</h2>
                            <fieldset>
                                @using (Html.BeginForm("LogOn", "Account"))
                                {
                                    <div class="Row">
                                        <label>
                                            E-Mail</label>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "inpfld" })
                                        <div class="Clr">
                                        </div>
                                    </div>
                                    <div class="Row">
                                        <label>
                                            Password</label>
                                        @Html.PasswordFor(m => m.Password, new { @class = "inpfld" })
                                        <div class="Clr">
                                        </div>
                                    </div>
                                    <div class="remember">
                                        <label style="font-weight: normal; width: 274px;">
                                            @Html.CheckBox("RememberMe", true)
                                            Remember me
                                        </label>
                                        <br />
                                    </div>
                                    <div class="login">
                                        <input name="" type="image" src="@Url.Content("~/Content/Images/login.jpg")" /></div>
                                }
                            </fieldset>
                            <p>
                                Not a member? <a href="@Url.Action("Index", "Register")">Register for full access</a>.
                                Or, Login to E-Drive Autos<br />
                                using your facebook account with just couple of clicks.</p>
                            <div class="facebookConnect">
                                <a href="@(ViewData["facebookLoginUrl"] ?? "#")">
                                    <img src="@Url.Content("~/Content/images/facebook_connect.jpg")" alt="" />
                                </a>
                            </div>
                            <div style="color: Red; text-align: center">
                                @(ViewData["Msg"] ?? "")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clear">
    </div>
    <div class="divbottom-home">
        <div class="divbottomleft-new">
        </div>
        <div class="divbottommiddetail-new-line-inner">
        </div>
        <div class="divbottomright-new">
        </div>
    </div>
    <div class="clear">
    </div>
</div>
