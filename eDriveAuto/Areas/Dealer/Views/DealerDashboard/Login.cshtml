@model Edrive.Models.UserLogin

@{
    Layout = null;
  
        
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
 
   @if (ViewData["metatitle"] != null && ViewData["description"] != null && ViewData["keywords"] != null)
   { <title> @(ViewData["metatitle"] ?? "") </title>
   <meta name="metatitle" content="@(ViewData["metatitle"] ?? "")" />
   <meta name="description" content="@(ViewData["description"] ?? "")" />
      <meta name="keywords" content="@(ViewData["keywords"] ?? "")" />
   }
   else
   { <title>Dealership Login Account - Edrivesutos, LLC</title>
        <meta name="title" content="Dealership Login Account - Edrivesutos, LLC"/>
    <meta name="description" content="Login here with username and password to access your dealership account to activate Edriveautos, LLC services to buy or sell online cars, whole vehicles pre-auctions from our website." />
    <meta name="keywords" content="dealers login account, dealers auctions services, sell online cars, buy online vehicles, inventory management system, online wholesale vehicles" />
   }

     <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/themes/App_Themes/EDrive/styles.css")" type="text/css" rel="stylesheet" />
</head>
<body class="PriceGuarantee">
    <div id="form1">
    <div>
        <div class="dealerheader">
            <a class="logo" href="@Url.Action("Index", "Home", new { area = "" })"></a>
            <div style="float: right; margin-right: 33px; margin-top: 10px;">
                <a href="@Url.Action("Index", "Home", new { area = "" })" class="dealeraLink">Home Page</a></div>
        </div>
        <div class="dealerInner">
            <div class="dealerInnerLogin">
                <div class="dealerHeading">
                    Dealer Sign-in
                </div>
                <div class="dealerTbl">@*
                    <asp:Login  ID="LoginForm" TitleText="" RememberMeSet="True" FailureText="<% $NopResources:Login.FailureText %>"
                        Width="100%" OnLoggedIn="OnLoggedIn">
                        <LayoutTemplate>*@
                   @using (Html.BeginForm("Login", "DealerDashboard"))
                   {
                        <table cellpadding="3" cellspacing="3">
                        <tr>
                            <td>
                                Username
                            </td>
                            <td>
                               @Html.TextBoxFor(m => m.Email, new { style = "height: 25px; width: 240px" })
                                                           </td>
                        </tr>
                        <tr>
                            <td>
                                Password
                            </td>
                            <td>
                               @Html.PasswordFor(m => m.Password, new { style = "height: 25px; width: 240px" })
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" align="right">
                                <a href="/Account/PasswordRecovery" class="dealeraLink">Forgot Password?</a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                            </td>
                            <td align="left">
                                <label>
                                    <input type="checkbox" id="SignedIn" />
                                    Keep me signed in
                                </label>
                            </td>
                        </tr>
                       
                        <tr>
                            <td colspan="2" style="height: 4px;">
                            </td>
                        </tr>
                        <tr>
                            <td>
                            </td>
                            <td align="left">
                               
                                <input type="image" class="dealerLoginButton" src="@Url.Content("~/Content/themes/App_Themes/EDrive/images/signin-button.jpg")" alt=" Sign Up Now!" />
                                <br />
                                <div style="color:Red">
                                @(ViewData["Msg"]??"")
                                </div>


                  
                            </td>
                        </tr>
                    </table>
                   }
                    @*</LayoutTemplate>
                    </asp:Login>*@
                </div>
            </div>
            <div class="dealerInnerSamll">
                <div class="dealerHeadingtwo">
                    Don't have an account?
                </div>
              <div class="dealerHeadingthree">
                    <a href="@Url.Action("Index", "Dealers", new { area=""})" class="dealeraLink">
                        Sign Up Now!</a>
                </div>
            </div>
        </div>
        <div class="dealerInnerTwo">
            <div>
                <table cellpadding="3" cellspacing="3">
                    <tr>
                        <td style="height: 30px;">
                        </td>
                    </tr>
                    <tr>
                        <td style="font-size: 11px; padding-left: 230px;">
                            © Copyright 2011 E-Drive Autos, LLC. All rights reserved Worldwide.
                        </td>
                    </tr>
                    
                    <tr>
                        <td style="height: 10px;">
                        </td>
                    </tr>
           
                </table>
            </div>
        </div>
        <div class="dealerInnerThree">
        </div>
    </div>
    </div>
</body>
</html>
