@model Edrive.Models._HotSheetFilter

@{
    ViewBag.Title = "UserHotSheet";
}

@section Head{
<script type="text/javascript">

    $(document).ready(function () {
        $("#SelectAll").click(function () {
            var s = $(this).attr("checked");
            $("input[name='chkProduct'][type='checkbox']").attr("checked", s);
        });

    });

    $(document).ready(function () {
        $("#ChaneZip").click(function () {
            /* ----------update the hidden Zip value with value of zip textbox  */
            if ($('#form1').valid()) {
                $("#Zip").val($("#txtZip").val());
                $("#txtZip").val("");
                $("#PageIndex").val("0");
            }

        });
        $("#btnSearch").click(function () {
            $("#PageIndex").val("0");
            $("#Zip").val("");

        });
    });

    function DealerInfo(_productid) {
       
        $.get("DealerInfo/" + _productid, null, function (data) {
            $("#Modalpopup").dialog("destroy");
            $("#Modalpopup").html(data);
            $("#Modalpopup").dialog({ width: 570 });

        });
    }
    function SellerInfo(_productid) {
        $.get("SellerInfo/" + _productid, null, function (data) {
            $("#Modalpopup").html(data);
            $("#Modalpopup").dialog({ width: 570 });

        });
    }
    function postPage(obj) {

        //alert($(obj).attr("id"));

        $("#PageIndex").val($(obj).attr("id"));
        document.forms["form1"].submit();
    }
    </script>
