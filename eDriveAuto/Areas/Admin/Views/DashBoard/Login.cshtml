<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
@model Edrive.Models.UserLogin
@{
    Layout = null;}
<html xmlns="http://www.w3.org/1999/xhtml">
<head >
<title>
	Register a Account | Login to Access Account | Used  Vehicles  &amp; Used Cars in Pre-auctions – Edriveautos, LLC
</title>
    <link href="@Url.Content("~/Content/Themes/App_Themes/administration/styles.css")" type="text/css" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
 <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
</head>
<body style="background-color: #F8FCFF;">
    <div  >
    <div class="login-block-logo">
        <span style="font-size: 18px; float: right; color: #424242; margin-right: 65px">Admin
            Login</span>
        <img src="@Url.Content("~/Content/themes/App_Themes/administration/images/logo-new01-admin.jpg")" />
    </div>
       @using (Html.BeginForm("Login", "Dashboard"))
       {
    <div class="login-block">
        <div id="LoginForm" style="width:100%">
            <table class="login-table-container">
                <tbody>
                    <tr>
                        <td>
                        </td>
                    </tr>
                    <tr class="row">
                        <td class="item-name">
                            E-Mail Address:
                        </td>
                    </tr>
                    <tr class="row">
                        <td class="item-value">
                        @Html.TextBoxFor(m=>m.Email,new {style="width: 200px;"})
                        </td>
                    </tr>
                    <tr class="row">
                        <td class="item-name">
                            Password:
                        </td>
                    </tr>
                    <tr class="row">
                        <td class="item-value">
                            @Html.PasswordFor(m=>m.Password,new {style="width: 200px;"})
                        </td>
                    </tr>
                    <tr class="row">
                        <td class="item-value">
                            <label>
                                <input type="checkbox"  id="RememberMe" name="RememberMe" text="<% $NopResources:Login.RememberMe %>" />
                                Remember me
                            </label>
                        </td>
                    </tr>
                    <tr class="row">
                        <td class="message-error">
                        </td>
                    </tr>
                    <tr class="row">
                        <td>
                            <div class="buttons">
                                <input type="submit" id="LoginButton" value="Login" class="adminButtonBlue" />
                            </div>
                        </td>
                    </tr>
                    <tr>
                    <td   style="color:red">@(ViewBag.Msg ?? "")
</td>

                    </tr>
                </tbody>
            </table>
        </div>
    </div>
       }
    </div>
</body>
</html>
