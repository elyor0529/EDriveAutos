@model List<Edrive.Models.ED_Partners>
@{
    ViewBag.Title = "Manage Partner";
}

@section Head{
<style>
        
table.manageParteners  tr.alter td{background:#eff7ff;}
table.manageParteners td {padding-left:5px;color:#245D75;background:white;height:21px;border:solid 1px #AFDFFD}
table.manageParteners  th{width:200px;background:#189ef7;color:White;font-weight:bold;text-align:center;padding-top:3px;padding-bottom:3px;}
    
table.manageParteners {width:970px;}

</style>


<script src="@Url.Content("~/Scripts/jquery.tablesorter.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.tablesorter.pager.js")" type="text/javascript"></script>
   
<script type="text/javascript">
    $(document).ready(function () {
        $("div#manageParteners table").tablesorter({ headers: { 0: { sorter: false }, 1: { sorter: false }, 2: { sorter: false }, 3: { sorter: false}} }).tablesorterPager({ container: $("#pager") });
    });

</script>
}
<h2>Manage Partner</h2>
<div style="text-align:center;color:Red;margin-right:15px;">
@using (Html.BeginForm("Index","ManagePartner"))
{
<div style="text-align:right ">
<input type="submit" value="Add New" name="AddNew" id="AddNew" />
</div>
<br />
}

</div>
<div>

@(ViewData["Msg"]??"")

@if (Model != null)
{
    <div id="manageParteners">
    <table class="manageParteners">
    <thead>
    <tr>
    <th class="tableHeader" > Name
    </th>
    <th>Company
    </th>
    <th>Email
    </th>
    <th>Created On
    </th>
    <th style="width:50px;">Edit
    </th>
     
    
    </tr>
    </thead>
<tbody>
    @foreach (var item in Model)
    {
        var clsName=Model.IndexOf(item)%2==0?"alter":"";
        <tr class="@clsName">
        <td>
        @item.FirstName @item.LastName 
        </td> 
        <td>@item.Company
        </td>
        <td>@item.Email
        </td>
        <td>@item.CreatedOn.ToString("dddd, MMMM dd, yyyy")
        </td>
        <td style="text-align:center">
            @Html.ActionLink("Edit", "Edit", "ManagePartner", new {id=@item.PartnerId}, null)
        </td>
        </tr>
        
    } 
</tbody>

    </table>
    <div id="pager" class="pager" style= "margin-top:5px;position:relative">
	<form>

		<img src="@Url.Content("~/Content/Images/Pager/first.png")" class="first">
		<img src="@Url.Content("~/Content/Images/Pager/prev.png")" class="prev">
		<input type="text" class="pagedisplay">
		<img src="@Url.Content("~/Content/Images/Pager/next.png")" class="next">
		<img src="@Url.Content("~/Content/Images/Pager/last.png")" class="last">
		<select class="pagesize">
			<option selected="selected" value="10">10</option>
			<option value="20">20</option>
			<option value="30">30</option>
			<option value="40">40</option>
		</select>
	</form>
</div>
    </div>

}


</div>

 


