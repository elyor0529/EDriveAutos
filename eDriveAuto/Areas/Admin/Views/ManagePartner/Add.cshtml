@model Edrive.Models.ED_Partners
@{
    ViewBag.Title = "Add Partner";
}
@section Head
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script language="javascript" type="text/javascript">

     
    

    </script>
    <style>
        div.pageContent
        {
            width: 967px;
        }
      div.pageContent    input[type='text']{width:250px;}
   div.pageContent    textarea{width:250px;height:100px;}
        div.pageContent fieldset
        {
         
            background: none repeat scroll 0 0 #F7FBFF;
            border: 1px solid #AFDFFD;
        }
         div.pageContent fieldset td
        {
        	padding-bottom:4px;
        }
         .EditPartener 
        {
          
        }
        .editor-label
        {
          width:186px; 
        }
    </style>

}
<h2>
    Add Partner</h2>
<br />
<div class="pageContent">
    @Html.ActionLink("Back", "Index")
    <br />
    <div style="text-align: center; color: Red;">
        @(ViewData["Msg"] ?? "")
    </div>
    @using (Html.BeginForm(
    "Add", "ManagePartner", null, FormMethod.Post, new { id = "form1", enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
        <div style="text-align: right">
            <input type="submit" value="Save" name="Save" id="Save" />
        </div>
     
        <fieldset>
            <legend>Info</legend>
            <table id="EditPartener">
                <tr>
                    <td class="editor-label">
                        First Name:
                        @Html.Hidden("PartnerId", "0")
                    </td>
                    <td class="editor-field">
                        @Html.EditorFor(model => model.FirstName)
                        @Html.ValidationMessageFor(model => model.FirstName)
                    </td>
                </tr>
                <tr>
                    <td class="editor-label">
                        Last Name:
                    </td>
                    <td>
                        @Html.EditorFor(model => model.LastName)
                        @Html.ValidationMessageFor(model => model.LastName)
                    </td>
                </tr>
                <tr>
                    <td class="editor-label">
                        Phone Number:
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Phone)
                        @Html.ValidationMessageFor(model => model.Phone)
                    </td>
                </tr>
                <tr>
                    <td class="editor-label">
                        Email:
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email)
                    </td>
                </tr>
                <tr>
                    <td class="editor-label">
                        Company:
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Company)
                        @Html.ValidationMessageFor(model => model.Company)
                    </td>
                </tr>
                <tr>
                    <td class="editor-label">
                        Website:
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Website)
                        @Html.ValidationMessageFor(model => model.Website)
                    </td>
                </tr>
                <tr>
                    <td class="editor-label">
                        Comments
                    </td>
                    <td>
                        @Html.TextAreaFor(model => model.Comments)
                        @Html.ValidationMessageFor(model => model.Comments)
                    </td>
                </tr>
                <tr>
                    <td class="editor-label">
                        Image
                    </td>
                    <td>
                        <img width="100px" height="82px" src="@Url.Action("Show", "Partners", new { area = "", id = 0 })" /><br>
                        <input type="file" name="PartenerImage" id="PartenerImage" />
                    </td>
                </tr>
                <tr>
                    <td class="editor-label">
                        Approved:
                    </td>
                    <td>
                        @Html.CheckBox("IsApproved", false)
                    </td>
                </tr>
            </table>
        </fieldset>
    }
</div>
