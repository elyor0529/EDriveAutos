@model Edrive.Models.ED_Faq
@{
    ViewBag.Title = "AddUserFAQs";
}
@section Head{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/sample.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="@Url.Content("~/fckEditor/fckeditor.js")"></script>
<script type="text/javascript">
$(document).ready(function(){
$("#Question").rules("add", {
 required: true,
 messages: {
   required: "* Required"
 }
});
});

</script>
<script type="text/javascript">
    window.onload = function () {
        var sBasePath = '@Url.Content("~/fckeditor/")';
        var oFCKeditor = new FCKeditor('content');
        oFCKeditor.BasePath = sBasePath;
        oFCKeditor.Height = 450;
        oFCKeditor.ReplaceTextarea();
    }
    </script>
   
   <style>
       #EditUserFAQs{
       background: #F7FBFF;
border: solid 1px #AFDFFD;
color: #245D75;
border-image: initial;padding-left:8px;
width: 948px;
margin-top: 15px;
padding-bottom: 10px;
padding-right: 12px;
padding-top: 9px;
}
#EditUserFAQs tr td {margin-top:3px;vertical-align:top}
 
    #EditUserFAQs table {width:100%;}
    #EditUserFAQs  td.firstPress{width:150px;}
 #EditUserFAQs   input[type='text']{width:280px;}
  #EditUserFAQs   textarea{width:280px;height:80px; }
</style>
    }
<h2>Add a new FAQ</h2> <span style="margin-left:8px;"><a href="@Url.Action("UserFAQs","ManageContent")" title="back to faq's list"> (back to FAQ list)</a></span>

<div>
@using (Html.BeginForm())
{
    <div style="color:Red;text-align:center">
@(ViewData["Msg"] ?? "")
</div>
<div style="text-align:right">
<input type="submit" value="Save" />
<br />
<br />

</div>
    <div id="EditUserFAQs">

<div>
<table cellpadding="0" cellspacing="0" border="0">
<tr>
<td class="firstPress">Question:
  </td>
  <td class="secondPress">@Html.TextBoxFor(m => m.Question, new { id = "Question" })
   
  </td></tr>
  <tr>
<td class="firstPress">Answer:
  </td>
  <td class="secondPress">@Html.TextAreaFor(m => m.Answer, new { id = "content" })
   
  </td></tr>
</table>
</div>
</div>
}
</div>

