td {}
#ManageUserFAQs td{text-align:left;background-color:#f7fbff}
</style>

<script type="text/javascript">
    function MoveUpRecord(faqid) {
        $.post("MoveUpUserFAQRecord/" + faqid, null, function (data) {
            if (data != "") {
                $("#GetFaqs").html(data);
            }


        }, "text");
    }
</script>
<script type="text/javascript">
    function MoveDownRecord(faqid) {
        $.post("MoveDownUserFAQRecord/" + faqid, null, function (data) {
            if (data != "") {
                $("#GetFaqs").html(data);
            }


        }, "text");
    }
</script>
<script src="@Url.Content("~/Scripts/jquery.tablesorter.min.js")" type="text/javascript"></script>
