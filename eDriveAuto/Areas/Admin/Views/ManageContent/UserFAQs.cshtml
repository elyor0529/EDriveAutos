    th{width:200px;background:#189ef7;color:White;font-weight:bold;text-align:center;padding-top:3px;padding-bottom:3px;}
  #ManageUserFAQs  tr td{padding-left:5px;color:#245D75; height:21px;text-align:center;border:1px #afdffd solid;}
 #ManageUserFAQs  tr.alter td {background:white;}
 #ManageUserFAQs   table#inner  td{border:none;}
 #ManageUserFAQs   table#inner {margin-top:5px;margin-bottom:5px;margin-left:5px;margin-right:5px;width:97%; }
